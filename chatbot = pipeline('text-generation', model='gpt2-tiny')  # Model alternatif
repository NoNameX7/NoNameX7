conn = sqlite3.connect('mining.db', check_same_thread=True)
c = conn.cursor()

c.execute('''CREATE TABLE IF NOT EXISTS users
             (user_id INTEGER PRIMARY KEY, coins INTEGER, last_mine_time REAL)''')
conn.commit()

@bot.message_handler(commands=['start'])
def start(message):
    user_id = message.from_user.id
    c.execute("INSERT OR IGNORE INTO users (user_id, coins, last_mine_time) VALUES (?, 0, 0)", (user_id,))
    conn.commit()
    bot.reply_to(message, "üî∑ **Bot Mining Koin** üî∑\n\n"
                       
@bot.message_handler(commands=['mine'])
def mine(message):
    user_id = message.from_user.id
    c.execute("SELECT coins, last_mine_time FROM users WHERE user_id=?", (user_id,))
    row = c.fetchone()
    
    if not row:
        bot.reply_to(message, "‚ùå Kamu belum memulai bot. Ketik /start dulu.")
        return
        
    coins, last_mine = row
    current_time = time.time()
    
    if current_time - last_mine < 3600:
        bot.reply_to(message, f"‚è≥ Tunggu {int(3600 - (current_time - last_mine)) // 60} menit lagi!")
        return
        
    coins_earned = random.randint(1, 5)
    new_coins = coins + coins_earned
    c.execute("UPDATE users SET coins=?, last_mine_time=? WHERE user_id=?", 
              (new_coins, current_time, user_id))
    conn.commit()
    
    bot.reply_to(message, f"‚õèÔ∏è Kamu mendapat {coins_earned} koin!\n"
                          f"üí∞ Total koin: {new_coins}")

@bot.message_handler(commands=['mycoin'])
def mycoin(message):
    user_id = message.from_user.id
    c.execute("SELECT coins FROM users WHERE user_id=?", (user_id,))
    row = c.fetchone()
    if row:
        bot.reply_to(message, f"üí∞ Total koinmu: {row[0]}")
    else:
        bot.reply_to(message, "‚ùå Kamu belum memulai bot. Ketik /start dulu.")

print("Bot berjalan...")
